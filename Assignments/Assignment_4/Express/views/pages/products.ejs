<%- include('../partials/navbar') %>

<section class="style-grid__section">
  <div class="style-grid__header">
    <p class="style-grid__subtitle">SHOP BY STYLE</p>
    <h2 class="style-grid__title">Styles to <em>Suit Every Occasion</em></h2>
  </div>

  <div class="style-grid__container">
    <% if (products && products.length > 0) { %>
      <% products.forEach(product => { %>
        <div class="style-grid__item">
          <img src="<%= product.image %>" alt="<%= product.name %>" />
          <p class="style-grid__label"><%= product.category %></p>
        </div>
      <% }) %>
    <% } else { %>
      <p>No products available.</p>
    <% } %>
  </div>
</section>
